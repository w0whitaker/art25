---
layout: base
permalink: /paintings/index.html
title: 'Paintings'
---
<div class="wrapper">
  {%- for year, items in collections.paintingsByYear | dictsort | reverse -%}
    <h2>{{ year }}</h2>
    <ul role="list" class="grid">
      {%- for item in items | reverse -%}
        <li>
          <a href="/paintings/{{ item.data.painting.title }}/">
            <img src="{{ item.data.painting.path }}" alt="{{ item.data.painting.title }}">
            <span>{{ item.data.painting.title }}</span>
          </a>
        </li>
      {%- endfor -%}
    </ul>
  {%- endfor -%}
</div>